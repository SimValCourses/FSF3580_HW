nnv = [10:10:200];
res_bs = zeros(length(nnv),1);
t_bs = zeros(length(nnv),1);
res_naive = zeros(length(nnv),1);
t_naive = zeros(length(nnv),1);

for i = length(nv)
	n = nv(i);
	A=randn(n); 
	P=randn(n);
	f1 = @() X0=lyap0(A,P);
	t_bs(i) = timeit(f1);
	res_bs(i)=norm(A*X0+X0*A'+P);

	f2 = @() X1=naive_lyap(A,P);
	t_naive(i) = timeit(f2);
	res_naive(i)=norm(A*X1+X1*A'+P);
end
